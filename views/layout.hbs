<script>
  function sbw_affix() {
    let $header = $('#header');
    let $footer = $('footer');
    let $navbar = $('.navbar');

    if ($header.outerHeight() === undefined) {
      $navbar.affix({
        top: $header.outerHeight()
      });

      $('#sidemenu').affix({
        offset: {
          top: $navbar.outerHeight(),
          bottom: $footer.outerHeight() - 200
        }
      });

    } else {

      $navbar.affix({
        offset: {
          top: $header.outerHeight(),
          bottom: $header.outerHeight() - 50
        }
      });

      $('#sidemenu').affix({
        offset: {
          top: $header.outerHeight(),
          bottom: $footer.outerHeight() + 50
        }
      });
    }
  }

  $(document).on('ready', sbw_affix());

</script>
