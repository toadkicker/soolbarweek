</head>
<body data-spy="scroll" data-target="#sidemenu">
{{#if header}}
  {{> header }}
{{/if}}
{{> nav }}
<div class="container h-10" id="content">
  <div class="row h-100 mt-3">
    {{>aside}}
    <main class="col py-5">
      <div class="row">
        <div class="col">
          {{#if tabs}}
            {{> tabs }}
            {{> tab_content}}
          {{/if}}
          {{{body}}}
        </div>
        {{#if right_column}}
          {{>right_column}}
        {{/if}}
      </div>
    </main>
  </div>
</div>
<footer class="bg-inverse text-white py-4">
  <div class="container">
    <div class="row">
      {{#footer}}
        {{>footer_column}}
      {{/footer}}
    </div>
    <div class="row">
      <div class="col-12 text-right small">
        &copy;{{current_year}} {{title}}
      </div>
    </div>
  </div>
</footer>
