<h4><%= t('contact_us') %></h4>
<%= form_with(model: @message, url: new_message_path, local: true) do |form| %>

    <div class="form-group field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :message_name, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= form.label :email %>
      <%= form.email_field :email, id: :message_email, class: 'form-control' %>
    </div>


    <div class="form-group field">
      <%= form.label :body %>
      <%= form.text_area :body, id: :message_body, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit t('send'), class: 'btn btn-outline-primary' %>
    </div>

<% end %>
