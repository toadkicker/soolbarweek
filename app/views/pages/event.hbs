<div class="col">
  <h3>{{event.title}}</h3>

  {{#if event.video_url}}
    <video class="mw-100" loop muted autoplay preload="auto">
      <source src="{{event.video_url}}" type="video/quicktime">
    </video>
  {{/if}}

  {{#if event.image_url}}
    <img class="img-fluid" src="{{event.image_url}}" alt="{{event.image_alt}}">
  {{/if}}

  <p class="card-text">{{event.description}}</p>
  <p class="card-text">
    {{event.location}}
  </p>
  <p class="card-text">{{event.start_time}}</p>
  <p class="card-text">{{event.end_time}}</p>
  <p class="lead"><span class="won"></span>{{event.price}}</p>

  <form action="{{event_form_url}}" method="post">
    <input type="hidden" name="order[event][id]" value="{{event.id}}">
    <input type="hidden" value="{{event.id}}">
    <b><span class="won">{{event.price}}</span></b>
    <label for="quantity">
      <input id="quantity" type="number" name="order[event][quantity]">
      Quantity
    </label>
    <button class="btn btn-outline-primary" type="submit">
      {{event.submit_button}}
    </button>
  </form>

</div>
