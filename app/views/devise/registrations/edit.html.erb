<h2><%= current_user.name %>'s <%= t('account').capitalize %></h2>

<%= link_to t('order_history'), order_history_path, class: 'btn btn-outline-primary' %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, multipart: true}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group field">
      <%= f.label :name %><br/>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :locale %><br/>
      <%= f.select :locale, [%w(English en-us), %w(Korean ko-kr)], {}, class: 'form-control custom-select' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('waiting_confirmation') %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group field">
      <%= f.label :password %> <i class="text-muted"><%= t('leave_blank') %></i><br/>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
      <% end %>
    </div>

    <div class="form-group field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>


    <div class="form-group field">
      <label><%= t('photo') %></label><br/>
      <%= f.label :photo, class: "form-control  custom-file" do %>
          <%= f.file_field :photo, id: :photo, class: 'custom-file-input', placeholder: t('browsefile') %>
          <%= content_tag :span, "", class: "custom-file-control" %>
      <% end %>
    </div>

    <div class="form-group field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-outline-primary' %>
    </div>
<% end %>
<hr class="py-2">
<h3><%= t('delete_account') %></h3>

<p><%= t('delete_account_permanent') %><%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to t('back'), :back %>
