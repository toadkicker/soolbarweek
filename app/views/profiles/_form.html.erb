<%= form_with(model: profile, local: true, html: {multipart: true}) do |form| %>
    <% if profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
            <% profile.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :profile_name, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :profile_description, class: 'form-control html-ok' %>
      <%= content_tag :small, t('allow_html') %>
    </div>

    <div class="form-group field">
      <%= form.label :tags %>
      <%= form.text_field :tags, id: :profile_tags, class: 'form-control' %>
      <%= content_tag :small, t('whatareprofiletags') %>
    </div>

    <div class="form-group field">
      <%= form.label :slug %>
      <%= form.text_field :slug, id: :profile_slug, class: 'form-control' %>
      <%= content_tag :small, t('slug') %>
    </div>

    <div class="form-check field">
      <%= form.label :is_active, class:'form-check-label' do %>
          <%= form.check_box :is_active, id: :profile_is_active, class: 'form-check-input' %>
          <%= t('active') %>?
      <% end %>
    </div>

    <div class="form-group field">
      <label><%= t('photo') %></label><br/>
      <%= form.label :photo, class: "custom-file" do %>
          <%= form.file_field :photo, id: :location_photo, class: 'custom-file-input', placeholder: t('browsefile') %>
          <%= content_tag :span, "", class: "custom-file-control" %>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-outline-primary' %>
    </div>
<% end %>

<script type="text/javascript" charset="utf-8">
    (function ($) {
        $(document).on('turbolinks:load', function (e) {
            $('#profile_tags').tagsInput();
        })
    })(jQuery)
</script>
