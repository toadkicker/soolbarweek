<div class="row">
  <div class="col">
    <h1><%= @profile.name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-sm-12">
    <%= image_tag @profile.photo, alt: @profile.name, class: 'rounded float-left mx-auto img-thumbnail' %>
  </div>
  <div class="col-md-8 col-sm-12">
    <p><%= t(@profile.name.parameterize.underscore + '_description', default: @profile.description).html_safe %></p>
  </div>
</div>
<script>
  $(".nav-link[href='/profiles']").addClass('active');
</script>